<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.taxi301777" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Taxi 301777</name>
	<description>Taxi 301777</description>
